{
  "ConnectionStrings": {
    "SolenLmsAppDbConnection": "Server=localhost;Database=SolenLmsAppDB;Trusted_Connection=True;Encrypt=False"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Imanys.SolenLms": "Information"
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning",
        "Imanys.SolenLms": "Error",
        "Microsoft.Hosting.Diagnostics": "Warning"
      }
    }
  },
  "Hashids": {
    "Salt": "Your children are very attractive. Are they adopted?",
    "MinHashLength": 8,
    "Alphabet": "1234567890ABCDEF"
  },
  "FormOptions": {
    "MultipartBodyLengthLimit": 2147483648 // 2G
  },
  "LocalStorageSettings": {
    "ResourcesFolder": "Resources"
  },
  "oidc": {
    "Authority": "https://localhost:6001"
  },
  "AllowedHosts": "*",
  "AzureServiceBusSettings": {
    "ConnectionString": "service bus connection string",
    "IdpQueueName": "identity-provider"
  },
  "AzureBlobStorageSettings": {
    "Enabled": false,
    "ConnectionString": "connection string goes here",
    "ResourcesContainerName": "resources"
  },
  "ApplicationInsights": {
    "Enabled": false,
    "ConnectionString": "connection string goes here"
  },
  "ResourcesSettings": {
    "MaxMediaStorageSpaceInGb": 0
    // IN GB. 0 = unlimited,
  }
